<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= f.error_notification %>
<div class="container my-4">
  <div class="row justify-center justify-content-center">
    <div class="col-4">
      <div class="card text-dark bg-light p-0">
        <div class="card-header text-center text-muted"><i class="far fa-address-card fa-2x"></i></div>
        <div class='card-body py-5'>
          <%= f.input :name,
                    required: true,
                    autofocus: true,
                    input_html: { class: "input mb-3" },
                    placeholder: "Full Name"%>
          <%= f.input :username,
                    required: true,
                    input_html: { class: "input mb-3" },
                    placeholder: "Username"%>
          <%= f.input :email,
                    required: true,
                    input_html: { class: "mb-3", autocomplete: "email" },
                    placeholder: "@email" %>
          <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { class: "mb-3", autocomplete: "new-password" },
                    placeholder: "Password" %>
          <%= f.input :password_confirmation,
                    required: true,
                    input_html: { class: "mb-3", autocomplete: "new-password" },
                    placeholder: "Password" %>
        </div>
        <div class="card-footer d-flex flex-column align-items-center">
          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "btn-outline-primary px-5" %>
          </div>
            <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>