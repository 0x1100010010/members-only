<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>
<div class="container mt-4">
  <div class="row justify-center justify-content-center">
    <div class="col-4">
      <div class="card text-dark bg-light p-0">
        <div class="card-header text-center text-muted"><i class="fas fa-question-circle fa-2x"></i></div>
        <div class='card-body py-5'>
          <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: {  class: "mb-3", autocomplete: "email" },
                placeholder: "@email" %>
        </div>
        <div class="card-footer d-flex flex-column align-items-center">
          <div class="form-actions">
            <%= f.button :submit, "Send me reset password instructions", class: "btn-outline-primary px-5" %>
          </div>
            <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>