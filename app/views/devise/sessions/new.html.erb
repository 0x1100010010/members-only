<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container mt-4">
  <div class="row justify-center justify-content-center">
    <div class="col-4">
      <div class="card text-dark bg-light p-0">
        <div class="card-header text-center text-muted"><i class="fas fa-sign-in-alt fa-2x"></i></div>
        <div class='card-body py-5'>
          <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: {  class: "mb-3", autocomplete: "email" },
                placeholder: "@email" %>
          <%= f.input :password,
                required: true,
                input_html: { class: "mb-3", autocomplete: "current-password" },
                placeholder: "Password" %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="card-footer d-flex flex-column align-items-center">
          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn-outline-primary px-5" %>
          </div>
            <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>